---
import Tag from "./Tag.astro";

interface Props {
	role: string;
	place: string;
	time: string;
    tasks: Array<string>;
    tools: Array<string>;
}

const { role, place, time, tasks, tools} = Astro.props;
---

<div class="exp mt-10 py-5 px-8 flex justify-start">
    <div class="pr-8 text-right font-bold basis-1/3">{time}</div>
    <div class="basis-2/3">
        <div>
            <div class="font-bold">{role}</div>
            <div class="font-bold">{place}</div>
        </div>
        <div class="mt-4">
            <span class="font-bold">Activities:</span>
            <ul class="mb-5">{ tasks.map((task) => <li>- {task}</li>) }</ul>
        </div>
        <Tag tags={tools} />
    </div>
    
</div>